include @cmps/Logo/logo

mixin burger
  .burger
    .container.burger__container
      .burger__top
        +logo
        button.btn-reset.burger__close#burger-close(aria-label="Закрыть меню")
      nav.burger-nav
        ul.list-reset.burger-nav__list
          li.burger-nav__item
            a.link-reset(href="#home") Home
          li.burger-nav__item
            a.link-reset(href="#why") Why SEO?
          li.burger-nav__item
            a.link-reset(href="#services") Services
          li.burger-nav__item
            a.link-reset(href="#team") Team
          li.burger-nav__item
            a.link-reset(href="#pricing") Pricing
          li.burger-nav__item
            a.link-reset(href="#blog") Blog
          li.burger-nav__item
            a.link-reset(href="#contact") Contact

mixin burger-open
  button.btn-reset.burger__open#burger-open(aria-label="Открыть меню")
    span
    span
    span
